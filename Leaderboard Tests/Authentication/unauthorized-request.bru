}

tests {
  test("Status code is 401", function() {
    expect(res.getStatus()).to.equal(401);
  });
  
  test("Response has CORS headers", function() {
    expect(res.getHeader("Access-Control-Allow-Origin")).to.equal("https://pvellacott.github.io");
  });
  
  test("Response contains unauthorized message", function() {
    const body = res.getBody();
    expect(body).to.have.property("message");
    expect(body.message).to.equal("Unauthorized");
  });
}
